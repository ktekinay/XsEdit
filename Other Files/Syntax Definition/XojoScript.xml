<?xml version="1.0" encoding="UTF-8"?>
<highlightDefinition version="1.3">
	<name>XojoScript</name>

<!-- MODULE block -->
	<blockStartMarker indent="1">^\s*(protected\b|private\b)?\s*module\b</blockStartMarker>
	<blockEndMarker>^\s*end\s+module\b</blockEndMarker>

<!-- CLASS block -->
	<blockStartMarker indent="1">^\s*(protected\b|private\b)?\s*class\b</blockStartMarker>
	<blockEndMarker>^\s*end\s+class\b</blockEndMarker>

<!-- WHILE block -->
	<blockStartMarker indent="1">^\s*while\b</blockStartMarker>
	<blockEndMarker>^\s*wend</blockEndMarker>

<!-- DO block -->
	<blockStartMarker indent="1">^\s*do\b</blockStartMarker>
	<blockEndMarker>^\s*loop\b</blockEndMarker>

<!-- FOR block -->
	<blockStartMarker indent="1">^\s*for\b</blockStartMarker>
	<blockEndMarker>^\s*next\b</blockEndMarker>

<!-- SUB block -->
	<blockStartMarker indent="1">^\s*((public|protected|private)\s+)?(shared\s+)?sub\b</blockStartMarker>
	<blockEndMarker>^\s*end\s+sub\b</blockEndMarker>

<!-- FUNCTION block -->
	<blockStartMarker indent="1">^\s*((public|protected|private)\s+)?(shared\s+)?function\b</blockStartMarker>
	<blockEndMarker>^\s*end\s+function\b</blockEndMarker>

<!-- IF block -->
	<blockStartMarker indent="1">^\s*(?:(if|elseif)\b.*\sthen\b\s*(('|//)|(?!.+?))|if\s(?!.*\sthen\b))</blockStartMarker>
<blockEndMarker>^\s*end\b(?:\s*(?://.*|'.*|REM\b.*)?$|\s+if\b)</blockEndMarker>

<!-- SELECT block -->
	<blockStartMarker indent="1">^\s*select</blockStartMarker>
	<blockEndMarker>^\s*end\b(?:\s*(?://.*|'.*|REM\b.*)?$|\s+select\b)</blockEndMarker>

<!-- everything else -->
	<blockStartMarker indent="1">^\s*(?:try|catch|else|Get|Set|#if|#elseif|#else)\b</blockStartMarker>
	<blockEndMarker>^\s*(?:catch|#else|#elseif|#endif)\b</blockEndMarker>

	<!-- these prevent subs and functions inside an interface from being indented: -->
	<blockStartMarker indent="1" newstate="inside_interface">^\s*(protected\b|private\b)?\s*interface\b</blockStartMarker>
	<blockEndMarker condition="inside_interface" newstate="">^\s*end\s+interface\b</blockEndMarker>

	<lineContinuationMarker indent="2">^(|.*\W)_\s*(|//.*|'.*)$</lineContinuationMarker>

	<symbols> <!-- these are used to identify declared symbols that are useful for natigation inside larger source file -->
		<symbol type="Method">
			<entryRegEx>^\s*(?:public|protected|private)?\b\s*(shared\b)?\s*(?&lt;!end\b)\s*(?:sub|function)\b.+?\([^\)]*\)\s*(?:as\b\s*\w+\s*)?</entryRegEx>
		</symbol>
		<symbol type="Property">
			<entryRegEx>^\s*(?:public|protected|private)?\b\s*(shared\b)?\s*(?&lt;!end\b)\s*(property\b).+</entryRegEx>
		</symbol>
		<symbol type="Class">
			<entryRegEx>^\s*(?:protected\b|private\b)?\s*class\s+\w+\s*</entryRegEx>
		</symbol>
		<symbol type="Module">
			<entryRegEx>^\s*(?:protected\b|private\b)?\s*module\s+\w+\s*</entryRegEx>
		</symbol>		
		<symbol type="Interface">
			<entryRegEx>^\s*(?:protected\b|private\b)?\s*interface\s+\w+\s*</entryRegEx>
		</symbol>		
	</symbols>
	
	<contexts defaultColor="#000000" caseSensitive="no">		
        <highlightContext name="Doubles" highlightColor="#006532">
